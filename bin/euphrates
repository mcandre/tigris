#!/bin/bash
unset IFS
set -eufo pipefail

TIGRIS_VERSION='0.0.1'

usage() {
    printf "Usage: %s [OPTIONS] [<source directory> (default ~/tigris)]\n" "$0"
    printf "\n"
    printf -- "-o <directory>\tOutput path (default: <source directory>/../euphrates)\n"
    printf -- "-l <amount>\tTrim left pixels, e.g. 104 (default: 0)\n"
    printf -- "-t <amount>\tTrim top pixels, e.g. 70 (default: 0)\n"
    printf -- "-r <amount>\tTrim right pixels, e.g. 103 (default: 0)\n"
    printf -- "-b <amount>\tTrim bottom pixels, e.g. 69420 (default: 0)\n"
    printf -- "-v\t\tShow version identifier\n"
    printf -- "-h\t\tShow usage menu\n"
}

banner() {
    printf "tigris + euphrates %s\n" "$TIGRIS_VERSION"
}

SOURCE_DIR="$HOME/Downloads/tigris"
TARGET_DIR=''
TRIM_LEFT='0'
TRIM_TOP='0'
TRIM_RIGHT='0'
TRIM_BOTTOM='0'

while [ "$#" -ge 1 ]; do
    case "$1" in
    '-o')
        shift
        TARGET_DIR="$1"
        shift
        ;;
    '-l')
        shift
        TRIM_LEFT="$1"
        shift
        ;;
    '-t')
        shift
        TRIM_TOP="$1"
        shift
        ;;
    '-r')
        shift
        TRIM_RIGHT="$1"
        shift
        ;;
    '-b')
        shift
        TRIM_BOTTOM="$1"
        shift
        ;;
    '-v')
        banner
        exit
        ;;
    '-h')
        usage
        exit
        ;;
    *)
        break
        ;;
    esac
done

if [ "$#" -gt 1 ]; then
    usage
    exit 1
fi

if [ "$#" -eq 1 ]; then
    SOURCE_DIR="$1"
fi

if [ -z "$TARGET_DIR" ]; then
    TARGET_DIR="${SOURCE_DIR}/../euphrates"
fi

mkdir -p "$TARGET_DIR"
find "$SOURCE_DIR" \
    -type f \
    -print0 |
    xargs \
        -0 \
        -n 1 \
        _euphrates \
        "$TARGET_DIR" \
        "$TRIM_LEFT" \
        "$TRIM_TOP" \
        "$TRIM_RIGHT" \
        "$TRIM_BOTTOM"
